<?xml version="1.0" encoding="utf-8"?>

<!--
Utilizado en Agenda y en AgendaComercial para el adaptador de la listview principal.

-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/category"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/image1" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text1"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textStyle="bold"
        android:textSize="15dp"
        android:maxWidth="200dp"
        android:layout_alignTop="@+id/category"
        android:layout_toRightOf="@+id/category"
        android:layout_toEndOf="@+id/category"
        android:maxLines="1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text2"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:layout_below="@+id/text1"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text1"
        android:layout_alignParentRight="true"
        android:text="Sin categorÃ­a"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text3"
        android:layout_marginLeft="2dp"
        android:text="TextView"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/nomail"
        android:baselineAlignBottom="false"
        android:layout_alignBottom="@+id/text2"
        android:layout_toRightOf="@+id/category"
        android:layout_toEndOf="@+id/category" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/text2"
        android:layout_toLeftOf="@+id/text4"
        android:src="@drawable/telef" />

</RelativeLayout>
